<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed = "false"
        android:state_focused = "true">
        <shape android:shape = "oval">
            <solid
                android:angle="45"
                android:color="#FFFFFF"
                android:type="linear" />
            <corners android:radius="7dp" />
            <stroke
                android:width="2dp"
                android:color="#00A7D1" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>
    <item android:state_pressed = "true"
        android:state_focused = "true">
        <shape android:shape = "oval">
            <solid
                android:angle="45"
                android:color="#C5C5C5"
                android:type="linear" />
            <corners android:radius="7dp" />
            <stroke
                android:width="2dp"
                android:color="#00A7D1" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>
    <item android:state_pressed = "false"
        android:state_focused = "false">
        <shape android:shape = "oval">
            <solid
                android:angle="45"
                android:color="#FFFFFF"
                android:type="linear" />
            <corners android:radius="7dp" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>


</selector>